<plominodatabase id="iol_praticaweb">
  <design>
    <resource id="tabella_elenco_pec" title="" type="Page Template"><![CDATA[<tal:block tal:on-error="string:ERRORE ${error/value} ${options/fieldvalue};"
  tal:define="fieldname options/fieldname;
    data options/fieldvalue;
    doc python:options['doc'];
    db python:doc.getParentDatabase();
    ">
     
    <fieldset class="scheduler-border"><legend class="scheduler-border">Elenco comunicazioni via PEC</legend>
      
    <table class="table table-bordered table-striped">
    <thead>
      <tr class="info">
        <th>Data e ora</th>
        <th>Destinatario</th>
        <th>Oggetto</th>
        <th >Accettazione</th>
        <th>Consegna</th>
      </tr>
    </thead>   
     
    <tal:loop tal:repeat="row data">   
      <tr tal:attributes="class python:'success' if row['Accettazione'] and row['Consegna'] else ''">
        <td tal:content="row/data"></td>
        <td tal:content="row/Destinatario"></td>
        <td tal:content="row/OggettoFiltrato"></td>
        <td ><img width="16" 
            tal:define="img python:'iol_verde' if row['Accettazione'] else 'iol_rosso'" 
            tal:attributes="src string:++resource++iol.document/images/${img}.png" />
        </td>        
        <td ><img width="16" 
            tal:define="img python:'iol_verde' if row['Consegna'] else 'iol_rosso'" 
            tal:attributes="src string:++resource++iol.document/images/${img}.png" />
        </td>
      </tr>
    </tal:loop>
        
        
    </table>
            
    </fieldset></tal:block>]]></resource>
  </design>
</plominodatabase>
