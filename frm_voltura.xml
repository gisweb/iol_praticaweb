      <onSaveDocument type="Products.Archetypes.Field.TextField"><![CDATA[from iol.document.plomino_utils import copyItems

#Solo se ho fatto il salvataggio dal button 
if not 'btn_next' in context.REQUEST.keys():
    return 

#Solo se ho fatto il salvataggio dal button 
if context.getParentDatabase().resources.customscripts.getProvider()=='sue':
    db=context.getParentDatabase()
    parentDoc=db.getDocument(context.getItem('titolo_esistente_id'))
    if parentDoc:
        context.setItem('iol_comune',parentDoc.getItem('iol_comune'))
        context.setItem('iol_tipo_proc',parentDoc.getItem('iol_tipo_proc'))       
        context.setItem('numero_pratica',parentDoc.getItem('numero_pratica'))
        context.setItem('titolo_esistente_intervento',parentDoc.getItem('descrizione_intervento'))
        context.setItem('ubicazioni_indirizzo',parentDoc.getItem('ubicazioni_indirizzo'))
        context.setItem('descrizione_intervento', '%s pratica numero %s' %(context.getItem('iol_form_title'),parentDoc.getItem('numero_pratica')))

        copyItems(parentDoc,context,'frm_tecnici')
        
    context.doAction('init')
    return context.toNextForm()




#### da rivedere ################
context.setItem('numero_pratica',context.getItem('titolo_esistente_numero'))
if context.getParentDatabase().resources.customscripts.getProvider()=='praticaweb':
    bw = "@@pw-info-procedimento"
    infoPratica = context.restrictedTraverse(bw)
    if infoPratica:
        infoPratica.setInfoProcedimento()
        context.doAction('init')
        context.setItem('iol_tipo_proc',context.getItem('iol_tipo_proc','sue'))
        return context.toNextForm() 
    
elif context.getParentDatabase().resources.customscripts.getProvider()=='halley':
    context.doAction('init')
    return context.toNextForm()]]></onSaveDocument>
